<section class="signin form-container">
    <header class="form-header">
        <h1 class="form-title">Welcome Back !</h1>
    </header>
    
    {{!-- {{>flash_message}}
  {{#if msg}}
    <p class="message {{msg.status}}">{{msg.text}}</p>
  {{/if}} --}}

    <form method="post" action="/signin" id="form-user">
        <div class="form-item-wrapper flexed-item">
          <label for="pseudo" class="label-ref label">Pseudo</label>
          <input id="pseudo" type="pseudo" name="pseudo" class="input-text input" placeholder="brad.pitt@gmail.com" required value="brad@pitt.com">
        </div>
        <div class="form-item-wrapper flexed-item">
          <label for="password" class="label-ref label">Mot de passe</label>
          <input id="password" type="password"  name="password" class="input-text input" placeholder="••••••" required value="1234">
        </div>
        <button class="button-primary white">Se connecter!</button>
    </form>

</section>  