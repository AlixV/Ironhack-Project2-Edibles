{{!-- Display all recipes available to the player --}}

<h2>Qu'est ce qu'on mange ce soir ?</h2>

{{!-- filter available recipes by plant --}}
<div>
    <label for="plant">Choisir une plante</label>
    <select name="plant" id="plant">
        {{#each recipe}}
            <option value="{{this.plant._id}}">{{this.plant.commonName}}</option>
        {{/each}}
    </select>
</div>

{{!-- add a new recipe --}}
<div>
    <h3>Ajouter une nouvelle recette</h3>
    <a href="/recipes/addRecipe">"Add" icon here</a>
    {{!-- <img src="/images/icons/cauldron.svg" alt="addarecipe-icon"> --}}
</div>

{{!-- list of recipes --}}
<div>
    {{#each recipe}}
        <div>
            <a href="/recipes/one/{{this._id}}">
                <h4>{{this.name}}</h4>
            </a>
            <p>Dur√©e: {{this.durationMinutes}}</p>
            <img src="{{this.image}}" alt="{{this.name}}">
            <a href="/recipes/delete/{{this._id}}">"Delete" icon here</a>
            {{!-- <img src="/images/icons/trash-alt.svg" alt="trash-icon"> --}}
            <a href="/recipes/edit/{{this._id}}">"Edit" icon here</a>
            {{!-- <img src="/images/icons/pencil.svg" alt="edit-icon"> --}}
            <p>Auteur: {{this.creator.pseudo}}</p>
        </div>
    {{/each}}
</div>