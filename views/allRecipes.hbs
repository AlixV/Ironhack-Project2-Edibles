<h2>Qu'est ce qu'on mange ce soir ?</h2>

<div>
    <label for="plant">Choisir une ou plusieurs plantes</label>
    <select name="plant" id="plant" multiple>
        {{#each plant}}
            <option value="{{this._id}}">{{this.commonName}}</option>
        {{/each}}
    </select>
</div>

<div>
   {{!-- clear filter options --}}
</div>

<div>
    <h3>Ajouter une nouvelle recette</h3>
    <a href="/recipe/addRecipe"><img src="/images/cauldron.svg" alt="addarecipe-icon"></a>
</div>

<div>
    {{#each recipe}}
        <div>
            <h4>{{this.name}}</h4>
            <p>{{this.creator}}</p>
            <p>{{this.duration}}</p>
            <img src="{{this.image}}" alt="{{this.name}}">
            <img src="/images/trash-alt.svg" alt="trash-icon">
            <img src="/images/pencil.svg" alt="edit-icon">
            <img src="/images/heart.svg" alt="addtofavorite-icon">
        </div>
    {{/each}}
</div>